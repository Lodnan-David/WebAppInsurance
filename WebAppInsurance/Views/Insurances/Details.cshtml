@model WebAppInsurance.Models.Insurance

@{
    ViewData["Title"] = "Detaily";
}

<div class="container">
    <h1>Detaily</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="new-container-main">
                <h4>Pojištění</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayName("Název pojištění:")
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.InsuranceName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayName("Předmět pojištění:")
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.InsuranceSubject)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayName("Částka:" )
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Amount) Kč
                    </dd>
                </dl>
            </div>
        </div>

        <div class="col-md-6">
            <div class="new-container-main">
                <h4>Pojištění</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayName("Datum počátku:")
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.StartDate)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayName("Datum konce:")
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.EndDate)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayName("Původní pojištěnec:")
                    </dt>
                    <dd class="col-sm-8">
                        <a class="custom-button-record" asp-controller="Insureds" asp-action="Details" asp-route-id="@Model.Insured.Id">
                            @Model.Insured.FullName
                        </a>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editovat</a> 
        <a class="btn custom-button-back btn-secondary" asp-action="Index">Zpět na seznam</a>
    </div>
</div>
