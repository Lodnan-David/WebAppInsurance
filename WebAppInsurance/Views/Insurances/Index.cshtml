@model IEnumerable<WebAppInsurance.Models.Insurance>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="table-responsive table-full-width">
                <table>
                    <thead>
                        <tr>
                            <th>
                                <span>Název pojištění</span>
                            </th>
                            <th>
                                <span>Předmět pojištění</span>
                            </th>
                            <th>
                                <span>Částka</span>
                            </th>
                            <th>
                                <span>Datum zahájení</span>
                            </th>
                            <th>
                                <span>Datum ukončení</span>
                            </th>
                            <th>
                                <span>Pojištěný</span>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InsuranceName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InsuranceSubject)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Insured.City)
                                </td>
                                <td>
                                    <a class="custom-button-edit btn-info btn-md" asp-action="Edit" asp-route-id="@item.Id">Editovat</a>
                                    <a class="custom-button-details btn-warning btn-md" asp-action="Details" asp-route-id="@item.Id">Detaily</a>
                                    <a class="custom-button-delete btn-danger btn-md" asp-action="Delete" asp-route-id="@item.Id">Smazat</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="new-container d-flex align-items-center justify-content-center">
                <div class="form-group text-center mt-1">
                    <a asp-action="Create" class="btn btn-primary btn-block">Vytvořit</a>
                </div>
            </div>
        </div>
    </div>
</div>

