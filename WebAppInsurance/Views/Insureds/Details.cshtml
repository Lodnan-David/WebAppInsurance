@model WebAppInsurance.Models.Insured

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="new-container-main">
            <h4>Pojištěný</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Jméno:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-2">
                    Příjmení:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-2">
                    Email:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    Telefon:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
            </dl>
        </div>
    </div>

    <div class="col-md-6">
        <div class="new-container-main">
            <h4>Adresa</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Ulice:
                </dt>
                <dd class="col-sm-10" >
                    @Html.DisplayFor(model => model.Street)
                </dd>
                <dt class="col-sm-2">
                    Číslo popisné:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HouseNumber)
                </dd>
                <dt class="col-sm-2">
                    Město:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2">
                    PSČ:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ZIPCode)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div class="text-center">
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Zpět na seznam</a>       
    </form>
    <a class="custom-button-edit btn-info " asp-action="Edit" asp-route-id="@Model?.Id">Editovat</a>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Pojištění</th>
                <th>Částka</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.MyInsurances)
            {
                <tr>
                    <td>@Html.DisplayFor(model => p.InsuranceName)</td>
                    <td>@Html.DisplayFor(model => p.Amount) Kč</td>
                    <td>
                        <a class="custom-button-delete btn-danger" href="@Url.Action("Delete", "Insurances", new { id = p.Id })">Smazat</a>
                        <a class="custom-button-edit btn-warning" href="@Url.Action("Edit", "Insurances", new { id = p.Id })">Editovat</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

