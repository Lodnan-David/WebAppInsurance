@model WebAppInsurance.Models.Insured

@{
    ViewData["Title"] = "Details";
}

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pojištěný</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Jméno:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Příjmení:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Telefon:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Ulice:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2">
            Číslo popisné:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HouseNumber)
        </dd>
        <dt class="col-sm-2">
            Město:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            PSČ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZIPCode)
        </dd>
    </dl>
</div>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Pojištění</th>
                <th>Částka</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.MyInsurances)
            {
                <tr>
                    <td>@Html.DisplayFor(model => p.InsuranceName)</td>
                    <td>@Html.DisplayFor(model => p.Amount) Kč</td>
                    <td>
                        @Html.ActionLink("Smazat", "Delete", "Insurances", new { id = p.Id }, new { @class = "delete-link" })
                        @Html.ActionLink("Editovat", "Edit", "Insurances", new { id = p.Id }, new { @class = "delete-link" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
