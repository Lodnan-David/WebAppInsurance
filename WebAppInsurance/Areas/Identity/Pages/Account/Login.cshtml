@page
@model LoginModel

@{
    ViewData["Title"] = "Přihlášení";
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form id="account" method="post">
                <h2>Přihlašte se pomocí místního účtu.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <table class="table">
                    <tr>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label-placeholder">E-mail</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="heslo" />
                                <label asp-for="Input.Password" class="form-label-placeholder">Heslo</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Přihlásit se</button>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Zapomněli jste heslo?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrovat se jako nový uživatel</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Znovu zaslat potvrzovací e-mail</a>
                            </p>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
